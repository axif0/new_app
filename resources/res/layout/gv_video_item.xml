<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.google.android.youtube.player.YouTubeThumbnailView android:id="@+id/imageView_thumbnail" android:background="@drawable/bracu_placeholder_videos" android:layout_width="160dp" android:layout_height="90dp" android:layout_margin="5dp" android:scaleType="centerCrop"/>
    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textSize="15sp" android:id="@+id/textView_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimens_5dp" android:text="@string/video_list_title"/>
        <TextView android:textColor="@color/colorSubtitle" android:id="@+id/textviewDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimens_5dp" android:text="Date"/>
        <TextView android:textColor="@color/colorSubtitle" android:id="@+id/textViewViewCount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimens_5dp" android:text="Views"/>
    </LinearLayout>
</LinearLayout>
