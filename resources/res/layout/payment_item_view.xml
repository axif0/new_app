        <TextView android:textAppearance="?android:attr/textAppearanceSmall" android:textSize="@dimen/text_size_12sp" android:textColor="@color/color_white_100" android:layout_gravity="end" android:id="@+id/tv_payment_time" android:background="@drawable/water_color_rect_background" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
