        <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="20sp" android:textColor="@color/color_white_100" android:layout_gravity="start" android:id="@+id/tv_payment_program_name" android:layout_width="match_parent" android:layout_height="wrap_content"/>
