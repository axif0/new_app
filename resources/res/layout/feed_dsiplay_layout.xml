<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/thumbnail" android:paddingRight="10dp" android:layout_width="100dp" android:layout_height="100dp" android:paddingStart="3dp"/>
    <TextView android:textSize="14sp" android:textStyle="bold" android:id="@+id/title_feed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/thumbnail" android:layout_alignTop="@+id/thumbnail"/>
    <TextView android:id="@+id/rating" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:layout_toRightOf="@+id/thumbnail" android:layout_below="@+id/title_feed"/>
    <TextView android:id="@+id/genre" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_toRightOf="@+id/thumbnail" android:layout_below="@+id/rating"/>
    <TextView android:id="@+id/releaseYear" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
</RelativeLayout>
