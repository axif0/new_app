<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/theme_background_gradient" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/header_layout_cafe_location" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="@dimen/dimen_margin_10dp" android:outlineProvider="bounds">
        <include android:id="@+id/action_bar" layout="@layout/action_bar"/>
    </RelativeLayout>
    <ScrollView android:paddingTop="@dimen/standard_padding_8dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/cafe_location1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp"/>
            <ImageView android:id="@+id/img_cafe_location1" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="15dp" android:src="@drawable/cafe1" android:scaleType="fitXY" android:adjustViewBounds="true"/>
            <TextView android:id="@+id/cafe_location2" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp"/>
            <ImageView android:id="@+id/img_cafe_location2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="15dp" android:src="@drawable/cafe2" android:scaleType="fitXY" android:adjustViewBounds="true"/>
            <TextView android:id="@+id/cafe_location3" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp"/>
            <ImageView android:id="@+id/img_cafe_location3" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginBottom="15dp" android:src="@drawable/cafe3" android:scaleType="fitXY" android:adjustViewBounds="true"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
