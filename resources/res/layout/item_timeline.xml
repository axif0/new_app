<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:gravity="center" android:id="@+id/tv_day_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TAS" android:ems="3" android:textAllCaps="true"/>
        <TextView android:gravity="center" android:id="@+id/tv_day_of_month" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_margin_10dp" android:text="21" android:textAllCaps="true"/>
        <TextView android:gravity="center" android:id="@+id/tv_month_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NAJ" android:textAllCaps="true"/>
    </LinearLayout>
    <com.github.vipulasri.timelineview.TimelineView android:id="@+id/timeline" android:layout_width="wrap_content" android:layout_height="match_parent" app:endLineColor="@color/colorAccent" app:lineStyle="0" app:lineWidth="3dp" app:markerInCenter="false" app:markerPaddingTop="@dimen/dimen_16dp" app:markerSize="20dp" app:startLineColor="@color/colorAccent"/>
    <com.google.android.material.card.MaterialCardView android:layout_gravity="center_vertical" android:id="@+id/mcv_timeline" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_16dp" android:layout_marginBottom="@dimen/dimen_16dp" android:minHeight="@dimen/dimens_70dp" android:layout_marginStart="@dimen/dimens_5dp" android:layout_marginEnd="@dimen/dimens_5dp" app:cardBackgroundColor="#2196f3" app:contentPadding="@dimen/standard_padding_8dp">
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textColor="@color/color_white_100" android:gravity="center" android:id="@+id/tv_class_unavailable_message" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0dp" android:text="@string/no_classes_for_the_day" android:layout_weight="1"/>
            <ListView android:id="@+id/lv_individual_class" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:listSelector="@android:color/transparent" android:divider="@color/colorListDivider" android:dividerHeight="0.5dp" android:headerDividersEnabled="true" android:footerDividersEnabled="true"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
