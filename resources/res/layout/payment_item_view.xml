            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="@color/color_white_100" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="@dimen/dimen_100dp" android:text="@string/status"/>
            <TextView android:textColor="@color/color_white_100" android:id="@+id/tv_payment_status" android:layout_width="match_parent" android:layout_height="wrap_content" android:textAllCaps="true" android:paddingStart="@dimen/dimens_5dp"/>
