            <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="@color/color_white_100" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="@dimen/dimen_100dp" android:text="@string/payslip_no"/>
